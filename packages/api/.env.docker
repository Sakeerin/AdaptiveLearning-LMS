# Docker Environment Configuration
# This file is used when running with Docker Compose

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# MongoDB Configuration (Docker)
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/adaptive-lms?authSource=admin
MONGODB_REPLICA_SET=rs0

# JWT Configuration
JWT_SECRET=docker-dev-jwt-secret-change-in-production-12345
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration (for AI Tutor)
# Set your OpenAI API key here for AI Tutor functionality
OPENAI_API_KEY=sk-your-openai-api-key-here

# Logging
LOG_LEVEL=debug

# Scheduler (enable background jobs)
ENABLE_SCHEDULER=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Mock mode in development)
EMAIL_MOCK_MODE=true
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Push Notifications (Mock mode in development)
PUSH_MOCK_MODE=true
# FCM_SERVER_KEY=your-fcm-server-key

# Application Version
APP_VERSION=1.0.0
